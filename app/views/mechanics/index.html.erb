<p id="notice"><%= notice %></p>

<h1>Mechanics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Experience</th>
      <th>Locaiton</th>
      <th>Range</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mechanics.each do |mechanic| %>
      <tr>
        <td><%= mechanic.name %></td>
        <td><%= mechanic.experience %></td>
        <td><%= mechanic.locaiton %></td>
        <td><%= mechanic.range %></td>
        <td><%= link_to 'Show', mechanic %></td>
        <td><%= link_to 'Edit', edit_mechanic_path(mechanic) %></td>
        <td><%= link_to 'Destroy', mechanic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

