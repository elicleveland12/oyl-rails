<p id="notice"><%= notice %></p>
<% if session[:mechanic_id] %>

<p>
  <strong>User:</strong>
  <%= @payment.user_id %>
</p>

<p>
  <strong>Mechanic:</strong>
  <%= @payment.mechanic_id %>
</p>



<% elsif session[:user_id] %>
<p>
  <strong>Name on card:</strong>
  <%= @payment.name_on_card %>
</p>

<p>
  <strong>Card number:</strong>
  <%= @payment.card_number %>
</p>

<p>
  <strong>Expiration:</strong>
  <%= @payment.expiration %>
</p>

<p>
  <strong>Security code:</strong>
  <%= @payment.security_code %>
</p>

<p>
  <strong>User:</strong>
  <%= User.find(@payment.user_id).username %>
</p>

<p>
  <strong>Mechanic:</strong>
  <%= Mechanic.find(@payment.mechanic_id).name %>
</p>

<% end %>

<p>
  <strong>Amount:</strong>
  $<%= @payment.amount %>
</p>

<% if @payment.card_number !="" %>
<p>PAID</p>
<% else %>
<p>UNPAID</p>
<% end %>
