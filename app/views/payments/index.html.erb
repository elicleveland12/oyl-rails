<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Name on card</th>
      <th>Card number</th>
      <th>Expiration</th>
      <th>Security code</th>
      <th>User</th>
      <th>Mechanic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.name_on_card %></td>
        <td><%= payment.card_number %></td>
        <td><%= payment.expiration %></td>
        <td><%= payment.security_code %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.mechanic_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
