<p id="notice"><%= notice %></p>

<h1>Payments</h1>
  <% if session[:user_id] != nil %>
<table class="pay-index">
  <thead>
    <tr>

      <th>Mechanic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @user.payments.each do |payment| %>
      <tr>
        <td><%= Mechanic.find(payment.mechanic_id).name %></td>
        <td><%= button_to 'View', payment, method: :get, class: "more-buttons" %></td>
        <td><%= button_to 'Pay', edit_payment_path(payment), method: :get, class: "more-buttons" %></td>
      </tr>
      <% end %>

      <% elsif session[:mechanic_id] != nil %>
      <table>
      <thead>
        <tr>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @mechanic.payments.each do |payment| %>
        <tr>
          <td><%= User.find(payment.user_id).username %></td>
          <td><%= button_to 'Show', payment, method: :get, class: "more-buttons" %></td>
          <td><%= button_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' }, class: "more-buttons" %></td>
        </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
