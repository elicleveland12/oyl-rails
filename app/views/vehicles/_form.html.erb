<%= form_with(model: vehicle, local: true) do |form| %>
  <% if vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :make %>
    <%= form.text_field :make %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :plate %>
    <%= form.text_field :plate %>
  </div>

  <div class="field">
    <%= form.label :oil_type %>
    <%= form.text_field :oil_type %>
  </div>

  <div class="field">
    <%= form.label :oil_quantity %>
    <%= form.number_field :oil_quantity %> Quarts
  </div>

  <div class="field" type="hidden">
    <%= form.hidden_field :user_id, value: session[:user_id] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>


<% end %>
